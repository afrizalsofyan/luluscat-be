{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["warn", 2],
    "semi": ["error", "always"],
    "quotes": ["warn", "single"],
    "linebreak-style": ["error", "unix"]
  }
}
